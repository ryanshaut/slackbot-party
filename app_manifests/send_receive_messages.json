{
    "display_information": {
        "name": "{BOT_NAME}"
    },
    "features": {
        "bot_user": {
            "display_name": "{BOT_NAME}",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/ping",
                "description": "Pong!",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "assistant:write",
                "channels:history",
                "channels:read",
                "chat:write",
                "chat:write.customize"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention",
                "message.channels"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}